<?xml version="1.0" encoding="utf-8"?>
<com.geowind.hunong.drawer.DrawView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:id="@+id/left_drawer"
              android:layout_width="300dp"
              android:layout_gravity="start"
              android:background="@color/white"
              android:layout_height="match_parent">

    <RelativeLayout android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:background="@color/colorAccent"
                    android:layout_height="174dp">
        <com.geowind.hunong.view.CircleImageView
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:background="@mipmap/photo"
                     android:src="@drawable/take_photo_me"
                     android:layout_marginLeft="30dp"
                     android:id="@+id/iv_avatar"
                     android:layout_marginTop="44dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/status"
            android:layout_below="@+id/tv_userName"
            android:layout_toRightOf="@+id/iv_avatar"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="24dp"
            android:id="@+id/iv_userType"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_level"
            android:textSize="10sp"
            android:background="@drawable/user_level"
            android:text="Lv1"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textColor="@color/colorAccent"
            android:layout_toRightOf="@+id/tv_userName"
            android:layout_toEndOf="@+id/tv_userName"
            android:layout_alignTop="@+id/iv_userType"
            android:layout_alignBottom="@+id/iv_userType"/>

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="登录/注册"
                  android:textSize="16dp"
                  android:textColor="@color/white"
                  android:layout_marginTop="12dp"
                  android:id="@+id/tv_userName"
                  android:layout_alignTop="@+id/iv_avatar"
                  android:layout_alignLeft="@+id/iv_userType"
                  android:layout_alignStart="@+id/iv_userType"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <TextView
            style="@style/sliding_tv_style"
            android:layout_marginTop="27dp"
            android:text="    个人信息"
            android:drawableLeft="@mipmap/person_info"
            android:id="@+id/tv_personal_info"
            />

        <TextView
            style="@style/sliding_tv_style"
            android:text="    信用记录"
            android:id="@+id/tv_credit"
            android:drawableLeft="@mipmap/credit"/>

        <TextView
           style="@style/sliding_tv_style"
           android:id="@+id/tv_historyTask"
           android:drawableLeft="@mipmap/historytask"
            android:text="     历史任务"/>
        <TextView
            style="@style/sliding_tv_style"
            android:text="    系统设置"
            android:id="@+id/tv_setting"
            android:drawableLeft="@mipmap/setting"/>
        <TextView
            style="@style/sliding_tv_style"
            android:text="    注销"
            android:id="@+id/tv_exit"
            android:drawableLeft="@mipmap/exit"/>
        <View
            android:layout_width="234dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="25dp"
            android:background="@color/left_textView_select"
            android:layout_height="1dp"/>
        <TextView
            style="@style/sliding_tv_style"
            android:text="      帮助"
            android:id="@+id/tv_help"
            android:drawableLeft="@mipmap/help"/>
        <TextView
            style="@style/sliding_tv_style"
            android:text="    关于"
            android:id="@+id/tv_about"
            android:drawableLeft="@mipmap/about"/>
    </LinearLayout>
</com.geowind.hunong.drawer.DrawView>