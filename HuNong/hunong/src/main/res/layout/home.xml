    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:paddingTop="30dp"
        android:layout_height="110dp">
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/weather"
            android:id="@+id/ib_weather"
            android:background="@android:color/transparent"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/enqurey"
            android:id="@+id/ib_zixun"
            android:background="@android:color/transparent"
            android:layout_weight="1"/>
        <ImageButton
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@mipmap/desease"
            android:id="@+id/ib_debug"
            android:background="@android:color/transparent"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="天气预报"
            android:gravity="center"
            android:layout_weight="1"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专家资讯"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="病虫妨害"
            android:layout_weight="1"
            android:gravity="center"
            android:textSize="18dp"/>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_marginTop="24dp"
           android:layout_height="wrap_content">
           <Button
               android:layout_weight="1"
               android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:text="论坛"
               android:layout_marginLeft="20dp"
               android:paddingLeft="50dp"
               android:textSize="22dp"
               android:textColor="@color/menue_bg"
               android:background="@mipmap/bbs"/>
           <Button
               android:layout_weight="1"
               android:layout_width="0dp"
               android:textSize="22dp"
               android:layout_marginLeft="32dp"
               android:layout_marginRight="20dp"
               android:textColor="@color/colorAccent"
               android:text="正在进行"
               android:paddingRight="60dp"
               android:layout_height="wrap_content"
               android:background="@mipmap/ing"/>
       </LinearLayout>
    </RelativeLayout>
</LinearLayout>