<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        android:layout_marginBottom="2dp"
        app:contentPadding="0dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:id="@+id/category_1"
                    android:background="@android:color/transparent"
                    android:src="@drawable/type_1"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:background="@android:color/transparent"
                    android:id="@+id/category_2"
                    android:src="@drawable/type_2"
                    android:layout_height="wrap_content"/>

                <ImageButton

                    android:layout_width="0dp"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:id="@+id/category_3"
                    android:src="@drawable/type_3"
                    android:layout_height="wrap_content"/>

                <ImageButton

                    android:layout_width="0dp"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:id="@+id/category_4"
                    android:src="@drawable/type_4"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_height="wrap_content">

                <ImageButton
                    android:layout_width="0dp"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:id="@+id/category_5"
                    android:src="@drawable/type_5"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:layout_width="0dp"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:id="@+id/category_6"
                    android:src="@drawable/type_6"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:layout_width="0dp"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:id="@+id/category_7"
                    android:src="@drawable/type_7"
                    android:layout_height="wrap_content"/>

                <ImageButton
                    android:layout_width="0dp"
                    android:background="@android:color/transparent"
                    android:layout_weight="1"
                    android:id="@+id/category_8"
                    android:src="@drawable/type_8"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</FrameLayout>