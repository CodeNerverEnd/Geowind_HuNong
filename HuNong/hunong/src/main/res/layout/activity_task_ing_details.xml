<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <include layout="@layout/menu_title_bar"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_marginTop="10dp"
           android:layout_height="wrap_content">
           <com.geowind.hunong.map.MyPopTextView
               android:layout_width="wrap_content"
               app:title="地址"
               app:icon="@drawable/details_addr"
               android:layout_marginLeft="30dp"
               android:id="@+id/tv_taskDetails_address"
               android:layout_height="wrap_content"/>
           <View
               android:layout_width="match_parent"
               android:background="@color/left_textView_select"
               android:layout_margin="10dp"
               android:layout_height="1dp"/>

           <com.geowind.hunong.map.MyPopTextView
               android:layout_marginLeft="30dp"
               android:layout_width="wrap_content"
               app:title="日期"
               app:icon="@drawable/details_date"
               android:id="@+id/tv_taskDetails_date"
               android:layout_height="wrap_content"/>
           <View
               android:layout_width="match_parent"
               android:background="@color/left_textView_select"
               android:layout_margin="10dp"
               android:layout_height="1dp"/>
           <com.geowind.hunong.map.MyPopTextView
               android:layout_marginLeft="30dp"
               android:layout_width="wrap_content"
               app:title="作业状态"
               android:id="@+id/tv_taskDetails_taskState"
               android:layout_height="wrap_content"/>
           <View
               android:layout_width="match_parent"
               android:background="@color/left_textView_select"
               android:layout_margin="10dp"
               android:layout_height="1dp"/>

           <com.geowind.hunong.map.MyPopTextView
               android:layout_marginLeft="30dp"
               android:layout_width="wrap_content"
               app:title="农机类型"
               android:id="@+id/tv_taskDetails_minchineType"
               android:layout_height="wrap_content"/>
           <View
               android:layout_width="match_parent"
               android:background="@color/left_textView_select"
               android:layout_margin="10dp"
               android:layout_height="1dp"/>
           <com.geowind.hunong.map.MyPopTextView
               android:layout_marginLeft="30dp"
               android:layout_width="wrap_content"
               app:title="农机编号"
               android:id="@+id/tv_taskDetails_minchineId"
               android:layout_height="wrap_content"/>
           <View
               android:layout_width="match_parent"
               android:background="@color/left_textView_select"
               android:layout_margin="10dp"
               android:layout_height="1dp"/>
           <com.geowind.hunong.map.MyPopTextView
               android:layout_marginLeft="30dp"
               android:layout_width="wrap_content"
               app:title="作物面积"
               android:id="@+id/tv_taskDetails_area"
               android:layout_height="wrap_content"/>
           <View
               android:layout_width="match_parent"
               android:background="@color/left_textView_select"
               android:layout_margin="10dp"
               android:layout_height="1dp"/>
           <com.geowind.hunong.map.MyPopTextView
               android:layout_marginLeft="30dp"
               android:layout_width="wrap_content"
               app:title="作物类型"
               android:id="@+id/tv_taskDetails_cropType"
               android:layout_height="wrap_content"/>
           <View
               android:layout_width="match_parent"
               android:background="@color/left_textView_select"
               android:layout_margin="10dp"
               android:layout_height="1dp"/>
           <com.geowind.hunong.map.MyPopTextView
               android:layout_marginLeft="30dp"
               android:layout_width="wrap_content"
               app:title="块区域"
               android:id="@+id/tv_taskDetails_farmZon"
               android:layout_height="wrap_content"/>
           <View
               android:layout_width="match_parent"
               android:background="@color/left_textView_select"
               android:layout_margin="10dp"
               android:layout_height="1dp"/>
           <com.geowind.hunong.map.MyPopTextView
               android:layout_marginLeft="30dp"
               android:layout_width="wrap_content"
               app:title="作业量"
               android:id="@+id/tv_taskDetails_workLoad"
               android:layout_height="wrap_content"/>
           <View
               android:layout_width="match_parent"
               android:background="@color/left_textView_select"
               android:layout_margin="10dp"
               android:layout_height="1dp"/>
           <com.geowind.hunong.map.MyPopTextView
               android:layout_marginLeft="30dp"
               android:layout_width="wrap_content"
               app:title="块名"
               android:id="@+id/tv_bname"
               android:layout_height="wrap_content"/>
           <View
               android:layout_width="match_parent"
               android:background="@color/left_textView_select"
               android:layout_margin="10dp"
               android:layout_height="1dp"/>

           <TextView
               android:layout_width="wrap_content"
               android:text="实景图:"
               android:layout_marginLeft="30dp"
               android:layout_marginTop="10dp"
               android:textColor="@color/default_text_color"
               android:layout_height="wrap_content"/>
           <ImageView
               android:layout_width="300dp"
               android:layout_margin="5dp"
               android:id="@+id/iv_farm"
               android:layout_gravity="center_horizontal"
               android:src="@drawable/default_image"
               android:scaleType="fitXY"
               android:layout_height="150dp"/>

           <View
               android:layout_width="match_parent"
               android:background="@color/left_textView_select"
               android:layout_margin="10dp"
               android:layout_height="1dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:text="备注:"
               android:layout_marginLeft="30dp"
               android:layout_marginTop="10dp"
               android:textColor="@color/default_text_color"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_width="match_parent"
               android:layout_margin="10dp"
               android:padding="5dp"
               android:id="@+id/tv_taskDetails_note"
               android:textColor="@color/default_text_color"
               android:layout_height="wrap_content"/>
       </LinearLayout>
    </ScrollView>



</LinearLayout>