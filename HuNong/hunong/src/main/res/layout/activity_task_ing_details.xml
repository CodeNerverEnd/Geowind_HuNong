<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:background="@color/colorAccent"
    android:elevation="4dp"
    android:layout_height="@dimen/header_height">
    <ImageButton
        android:layout_width="wrap_content"
        android:src="@mipmap/map_back"
        android:layout_margin="5dp"
        android:id="@+id/ib_taskDetails_back"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_centerInParent="true"
        android:text="任务详情"
        android:layout_height="wrap_content"/>
</RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="match_parent">
       <LinearLayout
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:layout_margin="10dp"
           android:layout_height="wrap_content">
           <com.geowind.hunong.map.MyPopTextView
               android:layout_width="wrap_content"
               app:title="地址"
               android:id="@+id/tv_taskDetails_address"
               android:layout_height="wrap_content"/>

           <com.geowind.hunong.map.MyPopTextView
               android:layout_width="wrap_content"
               app:title="日期"
               android:id="@+id/tv_taskDetails_date"
               android:layout_height="wrap_content"/>
           <com.geowind.hunong.map.MyPopTextView
               android:layout_width="wrap_content"
               app:title="作业状态"
               android:id="@+id/tv_taskDetails_taskState"
               android:layout_height="wrap_content"/>

           <com.geowind.hunong.map.MyPopTextView
               android:layout_width="wrap_content"
               app:title="农机类型"
               android:id="@+id/tv_taskDetails_minchineType"
               android:layout_height="wrap_content"/>
           <com.geowind.hunong.map.MyPopTextView
               android:layout_width="wrap_content"
               app:title="农机编号"
               android:id="@+id/tv_taskDetails_minchineId"
               android:layout_height="wrap_content"/>
           <com.geowind.hunong.map.MyPopTextView
               android:layout_width="wrap_content"
               app:title="作物面积"
               android:id="@+id/tv_taskDetails_area"
               android:layout_height="wrap_content"/>
           <com.geowind.hunong.map.MyPopTextView
               android:layout_width="wrap_content"
               app:title="作物类型"
               android:id="@+id/tv_taskDetails_cropType"
               android:layout_height="wrap_content"/>
           <com.geowind.hunong.map.MyPopTextView
               android:layout_width="wrap_content"
               app:title="块区域"
               android:id="@+id/tv_taskDetails_farmZon"
               android:layout_height="wrap_content"/>
           <com.geowind.hunong.map.MyPopTextView
               android:layout_width="wrap_content"
               app:title="作业量"
               android:id="@+id/tv_taskDetails_workLoad"
               android:layout_height="wrap_content"/>
           <com.geowind.hunong.map.MyPopTextView
               android:layout_width="wrap_content"
               app:title="块名"
               android:id="@+id/tv_bname"
               android:layout_height="wrap_content"/>
           <View
               android:layout_width="match_parent"
               android:background="@color/left_textView_select"
               android:layout_margin="10dp"
               android:layout_height="1dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:text="实景图:"
               android:layout_marginTop="10dp"
               android:textColor="#519f45"
               android:layout_height="wrap_content"/>
           <ImageView
               android:layout_width="wrap_content"
               android:layout_margin="5dp"
               android:id="@+id/iv_farm"
               android:layout_height="wrap_content"/>

           <View
               android:layout_width="match_parent"
               android:background="@color/left_textView_select"
               android:layout_margin="10dp"
               android:layout_height="1dp"/>
           <TextView
               android:layout_width="wrap_content"
               android:text="备注:"
               android:layout_marginTop="10dp"
               android:textColor="#519f45"
               android:layout_height="wrap_content"/>
           <TextView
               android:layout_width="match_parent"
               android:background="@color/left_textView_select"
               android:layout_margin="10dp"
               android:padding="5dp"
               android:id="@+id/tv_taskDetails_note"
               android:textColor="@android:color/black"
               android:layout_height="wrap_content"/>
       </LinearLayout>
    </ScrollView>
</LinearLayout>