<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
               android:padding="5dp"
                android:paddingLeft="15dp"
              android:layout_height="wrap_content">
<TextView
    android:layout_width="wrap_content"
    android:text="任务名称"
    android:textSize="18sp"
    android:id="@+id/tv_task_ing_name"
    android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="类型"
        android:layout_marginLeft="3dp"
        android:id="@+id/tv_MachineType"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/tv_task_ing_name"
        android:background="@drawable/bg_task_ing_tasktype"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="2016-8-15"
        android:layout_below="@+id/tv_task_ing_name"
        android:layout_marginTop="8dp"
        android:id="@+id/tv_task_ing_time"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="地点"
        android:id="@+id/tv_task_ing_address"
        android:layout_below="@+id/tv_task_ing_time"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:text="任务状态"
        android:id="@+id/tv_task_ing_state"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textSize="20sp"
        android:layout_marginRight="15dp"
        android:layout_height="wrap_content"/>
</RelativeLayout>