<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="#415965"
tools:context="com.geowind.hunong.weather.WeatherActivity">

<LinearLayout
    android:layout_gravity="center"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btn"
            android:text="城市"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/cityName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="24dp"
            android:textColor="#FFFFFF"/>

        <TextView
            android:id="@+id/temperature1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#F2FEFB"/>

        <TextView
            android:id="@+id/week1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#F2FEFB"/>

        <TextView
            android:id="@+id/temperatureNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="108dp"
            android:textColor="#F2FEFB"/>

        <TextView
            android:id="@+id/pm25Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:textColor="#DADADA"/>

        <TextView
            android:id="@+id/weather1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="18dp"
            android:textColor="#DADADA"/>

        <TextView
            android:id="@+id/windstrength1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="18dp"
            android:textColor="#DADADA"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:textColor="#DADADA">

            <TextView
                android:id="@+id/week2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DADADA"/>

            <ImageView
                android:id="@+id/weather_seconddayImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/temperature2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DADADA"/>

            <TextView
                android:id="@+id/weather2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DADADA"/>

            <TextView
                android:id="@+id/windstrength2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DADADA"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/week3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DADADA"/>

            <ImageView
                android:id="@+id/weather_thirddayImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/temperature3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DADADA"/>

            <TextView
                android:id="@+id/weather3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DADADA"/>

            <TextView
                android:id="@+id/windstrength3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#DADADA"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>

</LinearLayout>
