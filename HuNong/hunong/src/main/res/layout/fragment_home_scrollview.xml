<?xml version="1.0" encoding="utf-8"?>
<com.github.ksoichiro.android.observablescrollview.ObservableScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_scrollView"
    android:layout_width="match_parent"
    android:layout_marginTop="0dp"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/material_view_pager_placeholder"/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="0dp"
            >
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="vertical"
               android:layout_height="match_parent">
               <RelativeLayout
                   android:layout_width="match_parent"
                   android:layout_marginBottom="48dp"
                   android:layout_height="wrap_content">
                   <android.support.v4.view.ViewPager
                       android:layout_width="match_parent"
                       android:id="@+id/home_slidingShow"
                       
                       android:layout_height="@dimen/home_viewpager_height">
                   </android.support.v4.view.ViewPager>
                   <LinearLayout
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:id="@+id/ll_home_piont"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="144dp"
                       android:orientation="horizontal">
                   </LinearLayout>
               </RelativeLayout>
               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_marginRight="33dp"
                   android:layout_marginLeft="33dp"
                   android:layout_height="wrap_content">
                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:gravity="center"
                       android:clickable="true"
                       android:background="@drawable/selector_home_ib_pressed"
                       android:layout_height="wrap_content">
                       <ImageButton
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@mipmap/weather"
                           android:background="@android:color/transparent"
                           android:layout_marginBottom="8dp"
                           android:id="@+id/ib_weather"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="天气预报"
                           android:gravity="center"
                           android:textSize="18dp"/>
                   </LinearLayout>
                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:gravity="center"
                       android:clickable="true"
                       android:background="@drawable/selector_home_ib_pressed"
                       android:layout_height="wrap_content">
                       <ImageButton
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@mipmap/zixun"
                           android:layout_marginBottom="8dp"
                           android:background="@android:color/transparent"
                           android:id="@+id/ib_zixun"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="专家咨询"
                           android:gravity="center"
                           android:textSize="18dp"/>
                   </LinearLayout>
                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_weight="1"
                       android:layout_width="0dp"
                       android:gravity="center"
                       android:clickable="true"
                       android:background="@drawable/selector_home_ib_pressed"
                       android:layout_height="wrap_content">
                       <ImageButton
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@mipmap/desease"
                           android:layout_marginBottom="8dp"
                           android:background="@android:color/transparent"
                           android:id="@+id/ib_debug"/>
                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="病虫害反馈"
                           android:gravity="center"
                           android:textSize="18dp"/>
                   </LinearLayout>
               </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:orientation="horizontal"
                   android:layout_marginRight="28dp"
                   android:layout_marginLeft="28dp"
                   android:layout_marginTop="24dp"
                   android:layout_height="wrap_content">
                   <android.support.v7.widget.CardView
                       android:layout_weight="1"
                       android:id="@+id/cv_map"
                       app:cardCornerRadius="2dp"
                       style="@style/cardView_style">
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:layout_gravity="center"
                           android:background="@drawable/selector_home_ib_pressed"
                           android:src="@mipmap/map"/>
                   </android.support.v7.widget.CardView>
                   <android.support.v7.widget.CardView
                       android:layout_weight="1"
                       android:id="@+id/cv_ing"
                       app:cardCornerRadius="0dp"
                       style="@style/cardView_style">
                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_gravity="center"
                           android:background="@drawable/selector_home_ib_pressed"
                           android:layout_height="wrap_content"
                           android:src="@mipmap/ing"/>
                   </android.support.v7.widget.CardView>

               </LinearLayout>
           </LinearLayout>

        </android.support.v7.widget.CardView>


    </LinearLayout>
</com.github.ksoichiro.android.observablescrollview.ObservableScrollView>