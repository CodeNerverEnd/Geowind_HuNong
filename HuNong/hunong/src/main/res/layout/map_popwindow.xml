<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:poptv="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:background="@drawable/pop_backround"
              android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_height="150dp">
        <LinearLayout
            android:layout_width="0dp"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:id="@+id/ll_map_pop"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/iv_map_pop_task"
                android:layout_height="wrap_content"/>
        </LinearLayout>
      <LinearLayout
          android:layout_width="0dp"
          android:layout_weight="1"
          android:orientation="vertical"
          android:layout_marginLeft="5dp"
          android:layout_height="match_parent">
          <ImageButton
              android:layout_width="wrap_content"
              android:src="@mipmap/close"
              android:layout_gravity="right"
              android:layout_marginRight="10dp"
              android:layout_marginTop="5dp"
              android:id="@+id/ib_pop_quxiao"
              android:background="@android:color/transparent"
              android:layout_height="wrap_content"/>
          <TextView
              android:layout_width="wrap_content"
              android:text="任务详情"
              android:textSize="18dp"
              android:layout_toRightOf="@id/ll_map_pop"
              android:id="@+id/tv_taskName"
              android:textColor="@android:color/black"
              android:layout_height="wrap_content"/>
          <TextView
              android:layout_width="wrap_content"
              android:text="备注:"
              android:textSize="18dp"
              android:textColor="@android:color/black"
              android:layout_height="wrap_content"/>
          <TextView
              android:layout_width="wrap_content"
              android:textColor="@android:color/black"
              android:textSize="14dp"
              android:id="@+id/tv_pop_note"
              android:layout_height="wrap_content"/>
      </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:layout_marginTop="10dp"
         android:layout_marginLeft="25dp"
        android:orientation="vertical">

        <com.geowind.hunong.map.MyPopTextView
            android:layout_width="match_parent"
            poptv:title="地点"
            android:id="@+id/tv_pop_address"
            android:layout_height="wrap_content"/>
        <com.geowind.hunong.map.MyPopTextView
            android:layout_width="match_parent"
            poptv:title="任务类型"
            android:id="@+id/tv_pop_taskType"
            android:layout_height="wrap_content"/>
        <com.geowind.hunong.map.MyPopTextView
            android:layout_width="match_parent"
            poptv:title="作物类型"
            android:id="@+id/tv_pop_plantsType"
            android:layout_height="wrap_content"/>
        <com.geowind.hunong.map.MyPopTextView
            android:layout_width="match_parent"
            poptv:title="农机"
            android:id="@+id/tv_pop_machineName"
            android:layout_height="wrap_content"/>
        <com.geowind.hunong.map.MyPopTextView
            android:layout_width="match_parent"
            poptv:title="任务时间"
            android:id="@+id/tv_pop_taskTime"
            android:layout_height="wrap_content"/>
        <com.geowind.hunong.map.MyPopTextView
            android:layout_width="match_parent"
            poptv:title="任务状态"
            android:id="@+id/tv_pop_taskState"
            android:layout_height="wrap_content"/>

    </LinearLayout>


</LinearLayout>