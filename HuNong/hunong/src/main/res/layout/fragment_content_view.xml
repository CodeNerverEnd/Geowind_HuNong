<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent"
                    android:background="@color/colorAccent"
                    android:layout_height="56dp">
        <ImageButton android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/menu"
            android:background="@android:color/transparent"
            android:layout_marginTop="22dp"
            android:layout_marginLeft="11dp"
            android:id="@+id/ib_menu"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#ffffff"
            android:text="位置"
            android:layout_marginTop="20dp"
            android:textSize="20dp"
            android:layout_marginLeft="32dp"
            android:id="@+id/tv_location"
            android:layout_height="wrap_content" />
        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/search"
                     android:layout_marginTop="22dp"
                     android:background="@android:color/transparent"
                     android:layout_centerVertical="true"
                     android:layout_marginLeft="170dp"
                     android:layout_marginRight="28dp"
                     android:id="@+id/bt_search"/>

        <ImageButton android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@drawable/more"
                     android:layout_marginTop="22dp"
                     android:background="@android:color/transparent"
                     android:layout_centerVertical="true"
                     android:layout_marginRight="11dp"
                     android:id="@+id/bt_add"/>

    </LinearLayout>
    <RadioGroup android:layout_width="match_parent"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        android:id="@+id/rg_radio"
        android:layout_height="48dp">
        <RadioButton style="@style/radioButonStyle"
            android:text="主页"
            android:id="@+id/rb_home" />
        <RadioButton style="@style/radioButonStyle"
            android:text="消息"
            android:id="@+id/rb_msg" />

        <RadioButton style="@style/radioButonStyle"
            android:text="文库"
            android:id="@+id/rb_library" />
        <RadioButton style="@style/radioButonStyle"
            android:text="地图"
            android:id="@+id/rb_map" />
    </RadioGroup>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <View
        android:layout_width="90dp"
        android:layout_height="3dp"
        android:id="@+id/view_scrollBar"
        android:background="#0d8f6e"/>
    <android.support.v4.view.ViewPager android:layout_width="match_parent"
        android:layout_weight="1"
        android:id="@+id/vp_main"
        android:layout_height="match_parent"/>
</RelativeLayout>

</LinearLayout>