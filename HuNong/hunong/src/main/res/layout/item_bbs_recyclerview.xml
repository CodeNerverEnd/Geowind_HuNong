<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="100dp"
              android:elevation="5dp"
              android:layout_margin="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:textColor="@color/chat_text_color"
                android:id="@+id/bbs_title"
                android:text="水稻叶瘟防治技术"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/resource"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/bbs_title"
                android:text="www.geowind.com"
                android:layout_height="wrap_content"/>
        </RelativeLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:paddingRight="10dp"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content">
            <com.geowind.hunong.view.CircleImageView
                android:layout_width="wrap_content"
                android:id="@+id/bbs_headerImage"
                android:src="@drawable/default_image"
                android:layout_toRightOf="@+id/bbs_title"
                android:layout_below="@+id/bbs_title"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/author"
                android:text="geowind"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:text="分享于 "
                android:layout_marginLeft="10dp"
                android:layout_gravity="center_vertical"
                android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/bbs_date"
            android:text="2016-4-6"
            android:layout_gravity="center_vertical"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="30dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/bbs_agree"
                android:text="点赞人数"
                android:layout_marginRight="10dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/commentCount"
                android:text="评论人数"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        </LinearLayout>
</android.support.v7.widget.CardView>