<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:fitsSystemWindows="true"
              android:layout_height="match_parent">
    <include layout="@layout/menu_title_bar" />
    <RelativeLayout
        android:id="@+id/clear_task"

        style="@style/SettingItemStyle">
        <TextView
            style="@style/SettingItemTextStyle"
            android:paddingLeft="20dp"
            android:text="清除所有任务"
            />



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/me_split_line_color"/>


    <RelativeLayout
        android:id="@+id/clear_search"

        style="@style/SettingItemStyle">
        <TextView
            style="@style/SettingItemTextStyle"
            android:paddingLeft="20dp"
            android:text="清除搜索记录"
            />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/me_split_line_color"/>
    <RelativeLayout
        android:id="@+id/clear_systemMsg"

        style="@style/SettingItemStyle">
        <TextView
            style="@style/SettingItemTextStyle"
            android:paddingLeft="20dp"
            android:text="清除系统消息"
            />



    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/me_split_line_color"/>
    <RelativeLayout
        android:id="@+id/clear_reply"

        style="@style/SettingItemStyle">
        <TextView
            style="@style/SettingItemTextStyle"
            android:paddingLeft="20dp"
            android:text="清除专家回复"
            />



    </RelativeLayout>
</LinearLayout>