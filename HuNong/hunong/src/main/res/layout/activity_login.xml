<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                  android:layout_width="match_parent"
                                  android:layout_height="match_parent"
                                  android:gravity="center_horizontal"
                                  android:background="@drawable/bk">
        <LinearLayout android:layout_width="wrap_content"
                      android:orientation="vertical"
                      android:layout_height="wrap_content"
                      android:background="@mipmap/frame"
                      android:layout_marginTop="155dp"
                      android:layout_gravity="center"
            >

            <EditText android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:id="@+id/et_userName"
                      android:layout_marginLeft="20dp"
                      android:layout_marginRight="16dp"
                      android:background="@android:color/transparent"
                      android:textSize="16sp"
                      android:textColor="@color/default_text_color"
                      android:textColorHint="#c9c9c9"
                      android:layout_marginTop="20dp"
                      android:hint="用户名"/>

            <EditText android:layout_width="match_parent"
                      android:layout_height="40dp"
                      android:id="@+id/et_password"
                      android:inputType="textPassword"
                      android:layout_marginRight="16dp"
                      android:layout_marginLeft="20dp"
                      android:background="@android:color/transparent"
                      android:textColorHint="#c9c9c9"
                      android:textColor="@color/default_text_color"
                      android:textSize="16sp"
                      android:hint="密 码"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="77dp">

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/login_btn"
                    android:layout_marginTop="13dp"
                    android:onClick="onClick"
                    android:background="@android:color/transparent"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/selector_login_bt"/>

                <Button android:layout_width="wrap_content"
                        android:text="忘记密码"
                        android:textSize="14sp"
                        android:onClick="onClick"
                        android:textColor="#585050"
                        android:id="@+id/tv_forgetPsw"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/login_btn"
                        android:layout_toEndOf="@+id/login_btn"/>

                <Button android:layout_width="wrap_content"
                        android:text="注   册"
                        android:textSize="14sp"
                        android:textColor="#585050"
                        android:onClick="onClick"
                        android:id="@+id/bt_register"
                        android:background="@android:color/transparent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toLeftOf="@+id/login_btn"
                        android:layout_toStartOf="@+id/login_btn"/>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

