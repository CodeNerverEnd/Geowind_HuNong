<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F1EFF5"
    android:fitsSystemWindows="true"
    android:orientation="vertical" >

<include layout="@layout/menu_title_bar" />

    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:id="@+id/notification_rl"
            style="@style/SettingItemStyle"
            android:clickable="true"
            android:visibility="gone"
             >

            <TextView
                style="@style/SettingItemTextStyle"
                android:text="@string/new_msg_remind_hit"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/arrow"/>
        </RelativeLayout>
        



        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/me_split_line_color"/>
        
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/me_split_line_color" />


        <RelativeLayout
            android:id="@+id/clear_cache_rl"
            style="@style/SettingItemStyle">
            <TextView
                style="@style/SettingItemTextStyle"
                android:paddingLeft="20dp"
                android:text="@string/clear_cache"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:background="@drawable/arrow" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/me_split_line_color" />
        <RelativeLayout
            android:id="@+id/chack_update_rl"
            style="@style/SettingItemStyle">


            <TextView
                style="@style/SettingItemTextStyle"
                android:paddingLeft="20dp"
                android:text="@string/push_light"
                />

            <CheckBox
                android:id="@+id/push_light"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                 />


        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/me_split_line_color" />
        <RelativeLayout
            android:id="@+id/feedBack_rl"
            style="@style/SettingItemStyle">


            <TextView
                style="@style/SettingItemTextStyle"
                android:paddingLeft="20dp"
                android:text="@string/push_vibrate"
                />

            <CheckBox
                android:id="@+id/push_vibrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"

                />

        </RelativeLayout>


    </LinearLayout>


</LinearLayout>